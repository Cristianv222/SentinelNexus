[Unit]
Description=SentinelNexus Web Server (Gunicorn)
After=network.target

[Service]
User=root
WorkingDirectory=/opt/sentinelnexus
# Basic Gunicorn setup. Adjust workers/port as needed.
ExecStart=/opt/sentinelnexus/venv/bin/gunicorn --workers 3 --bind 0.0.0.0:8000 sentinelnexus.wsgi:application
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
